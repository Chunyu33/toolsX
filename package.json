{
  "name": "toolsx",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main/index.js",
  "author": "Evan Lau",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "electron-vite build && electron-builder",
    "dist:publish": "electron-vite build && electron-builder --publish always",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "build": {
    "appId": "com.toolsx.app",
    "productName": "ToolsX",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "Chunyu33",
        "repo": "toolsX"
      }
    ],
    "win": {
      "icon": "src/assets/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "archiver": "^7.0.1",
    "electron-updater": "^6.3.9",
    "ffmpeg-static": "^5.2.0",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.460.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.10.38",
    "png-to-ico": "^3.0.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "electron": "^30.4.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
